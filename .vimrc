set title
set number
set cursorline
set tabstop=2
set wrap
set backspace=indent,eol,start
set incsearch

filetype plugin indent on
syntax on
set autoindent
set showmatch

set backup
set undofile
set backupdir=~/.vim/backups
set directory=~/.vim/swaps
set undodir=~/.vim/undo
set viminfofile=~/.vim/viminfo
set nocompatible
